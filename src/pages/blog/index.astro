---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const posts = [
  {
    title: "Building Modern Web Applications with Astro",
    date: "2024-01-15",
    excerpt:
      "Exploring the benefits of Astro for building fast, content-focused websites with minimal JavaScript.",
    slug: "building-with-astro",
  },
  {
    title: "The Art of Clean Code",
    date: "2024-01-10",
    excerpt:
      "Best practices for writing maintainable, readable code that your future self will thank you for.",
    slug: "clean-code-practices",
  },
  {
    title: "TypeScript Tips for Better Development",
    date: "2024-01-05",
    excerpt:
      "Advanced TypeScript techniques that will improve your development workflow and code quality.",
    slug: "typescript-tips",
  },
];
---

<Layout title="Blog - John Doe">
  <Header />
  <main class="max-w-3xl mx-auto px-6 py-8">
    <div class="prose prose-lg max-w-none mx-auto">
      <h1 class="text-center">Blog</h1>

      <p class="text-center">
        Thoughts on web development, programming, and technology. I write about
        things I'm learning and experiences from building software.
      </p>

      <div class="space-y-8 not-prose">
        {
          posts.map((post) => (
            <article class="border-b border-gray-700 pb-8 bg-gray-800 p-6 rounded-lg">
              <h2 class="text-2xl font-semibold mb-2 text-center">
                <a
                  href={`/blog/${post.slug}`}
                  class="hover:text-blue-400 transition-colors text-gray-200"
                >
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-400 text-sm mb-3 text-center">{post.date}</p>
              <p class="text-gray-300 mb-4 text-center">{post.excerpt}</p>
              <div class="text-center">
                <a
                  href={`/blog/${post.slug}`}
                  class="text-blue-400 hover:underline"
                >
                  Read more â†’
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
